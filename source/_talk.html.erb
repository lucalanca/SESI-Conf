<%= "<a class='speaker-anchor' id='#{talk.anchor}'>&nbsp;</a>" if talk.anchor %>
<div class="timeline-sidebar">
	<h6><%= talk.from %> - <%= talk.until %></h6>
</div>
<div class="entry-mainwrapper talk">
	<h3 style="margin-bottom: 3px;">
		<%= talk.title %>
	</h3>
	<% talk.tags.each do |tag| %>
			<span class="tag"><%= tag %></span>
		<% end %>
	
	<p><%= talk.abstract %></p>

	<section class="authors-wrapper">
	<% talk.authors.each do |author| %>
		<article class="author">
			<div class="author-image">
				<% if author.image %>
					<img src="./img/speakers/<%= author.image %>" width="50">
				<% else %>
					<%= place_img("60x80") %>
				<% end %>
				
			</div>
			<div class="author-data">
				<span><%= author.name %></span><br>
				<% if author.social %>
					<% author.social.each do |s| %>
						<% if s.twitter %>
							<a href="<%= 'http://twitter.com/' + s.twitter %>">
								<%= place_img("20x20") %>
							</a>
						<% end %>
						<% if s.facebook %>
							<a href="<%= s.facebook %>">
								<%= place_img("20x20") %>
							</a>
						<% end %>
						<% if s.website %>
							<a href="<%= s.website %>">
								<%= place_img("20x20") %>
							</a>
						<% end %>
						<%= place_img("20x20") if s.email %>	
					<% end %>
				<% end %>
			</div>
		</article>
	<% end %>
	</section>
</div>